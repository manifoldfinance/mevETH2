{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "rootDir": ".",
        "outDir": "build",
        "esModuleInterop": false,
        "resolveJsonModule": false
    },
    "include": [
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}